<body>
  <div class="edit_world">
      
      <h1>Editing Book</h1>
    
    <% if @book.errors.any? %>
        <div class="error_world">
          <div class="error_title">
          <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          </div>
          <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
          </ul>
        </div>  
    <% end %>
<!-- この部分はブラウザに反映されません -->
    <%= form_with model:@book, local:true do |f| %>
    
     <div class="error_top">
      <%= f.label :title ,class: "label" %>
      <%= f.text_field :title %>
     </div>
     
     <div class="error_top">
      <%= f.label :body ,class: "label" %>
      <%= f.text_area :body ,class: "error_textarea"%>
     </div>
     
      <%= f.submit 'Update Book',class: "btn" %>
    <% end %>
    
    <div class="edit_link">
      <%= link_to "Show",book_path(@book.id) %>
      <span>|</span>
      <%= link_to "Back",books_path %>
    </div>
  </div>
</body>