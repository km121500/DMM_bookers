<body>
  <div class="index_world">
    
    <div class="index_flash">
    <%= flash[:notice] %>
    </div>
    
    <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
           <tr>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
             <td><%= link_to "Show", book_path(book.id) %></td>
             <td><%= link_to "Edit", edit_book_path(book.id) %></td>
             <td><%= link_to "Destroy", "/books/#{book.id}" ,method: :delete, "data-confirm" => "Are you sure?" %></td>
           </tr>
           <% end %>
        </tbody>
      </table>
      <!-- エラーメッセージ -->
    <h2>NEW book</h2>
        <% if @book.errors.any? %>
        <div class="error_world">
          <div class="error_title">
           <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          </div>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>  
        <% end %>
<!-- この部分はブラウザに反映されません -->
    <%= form_with model:@book, local:true do |f| %>
    
     <div class="error_top">
      <%= f.label :title ,class: "label" %>
      <%= f.text_field :title %>
     </div>
     
     <div class="error_top">
      <%= f.label :body ,class: "label" %>
      <%= f.text_area :body ,class: "error_textarea"%>
     </div>
     
      <%= f.submit 'Create Book',class: "btn" %>
    <% end %>
  
  <!-- この部分はブラウザに反映されません -->
  </div>
</body>